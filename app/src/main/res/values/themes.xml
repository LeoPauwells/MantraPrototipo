<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MantraPrototipo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/learn_purple</item>
        <item name="colorPrimaryVariant">@color/learn_black</item>
        <item name="colorOnPrimary">@color/learn_white_trans</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/learn_textColorSecondary</item>
        <item name="colorSecondaryVariant">@color/learn_textColorSecondary</item>
        <item name="colorOnSecondary">@color/learn_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MantraPrototipo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MantraPrototipo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MantraPrototipo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>